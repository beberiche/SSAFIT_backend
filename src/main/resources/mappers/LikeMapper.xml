<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ssafit.model.dao.LikeDao">
	<resultMap type="like" id="likeMap">
		<result column="no" property="no"/>
		<result column="youtube_id" property="youtubeId"/>
		<result column="user_id" property="userId"/>
	</resultMap>
	
	<insert id="insertLike" parameterType="like">
		INSERT INTO likes
			VALUES
				(0, #{youtubeId}, #{userId})
	</insert>
	
	<delete id="deleteLike" parameterType="like">
		DELETE FROM likes
			WHERE youtube_id = #{youtubeId} AND user_id = #{userId}
	</delete>

	<select id="selectListLike" parameterType="string" resultMap="likeMap">
		SELECT * FROM likes
			WHERE user_id = #{userId}
	</select>
</mapper>