<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ssafit.model.dao.FollowDao">
	<resultMap type="follow" id="followMap">
		<result column="no" property="No"/>
		<result column="user_id" property="UserId"/>
		<result column="follow_id" property="FollowId"/>
	</resultMap>
	
	<insert id="insertFollow" parameterType="follow">
		INSERT INTO follow
			VALUES
				(0, #{UserId}, #{FollowId})
	</insert>
	
	<delete id="deleteFollow" parameterType="int">
		DELETE FROM follow
			WHERE no = #{No}
	</delete>

	<select id="selectList" parameterType="string" resultMap="followMap">
		SELECT * FROM follow
			WHERE user_id = #{UserId}
	</select>
</mapper>