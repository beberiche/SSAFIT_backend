<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ssafit.model.dao.FollowDao">
	<resultMap type="follow" id="followMap">
		<result column="user_id" property="userId"/>
		<result column="follow_id" property="followId"/>
	</resultMap>
	
	<insert id="insertFollow" parameterType="follow">
		INSERT INTO follow
			VALUES
				(#{userId}, #{followId})
	</insert>
	
	<delete id="deleteFollow" parameterType="follow">
		DELETE FROM follow
			WHERE user_id = #{userId} and follow_id = #{followId}
	</delete>

	<select id="selectListFollow" parameterType="string" resultMap="followMap">
		SELECT * FROM follow
			WHERE user_id = #{userId}
	</select>
</mapper>